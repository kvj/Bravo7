<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">
    <Button android:id="@+id/login_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Login"></Button>
    <TextView android:text="URL:" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:text="" android:layout_width="match_parent" android:id="@+id/login_url" android:layout_height="wrap_content" android:capitalize="none" android:inputType="textUri" android:singleLine="true"></EditText>
    <TextView android:text="Login:" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:text="" android:layout_width="match_parent" android:id="@+id/login_login" android:layout_height="wrap_content" android:capitalize="none" android:singleLine="true"></EditText>
    <TextView android:text="Password:" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:text="" android:layout_width="match_parent" android:id="@+id/login_password" android:layout_height="wrap_content" android:password="true" android:inputType="textPassword" android:singleLine="true"></EditText>
</LinearLayout>
