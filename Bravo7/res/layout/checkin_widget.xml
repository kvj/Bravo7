<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" 
  android:id="@+id/checkin_w_root" android:padding="10dp">
  <RelativeLayout
    android:id="@+id/checkin_w_subroot"
    android:background="@drawable/widget_bg" 
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
  >
    <LinearLayout 
            android:layout_alignLeft="@id/checkin_w_subroot"
            android:layout_width="fill_parent"
            android:orientation="vertical" 
            android:layout_height="wrap_content" 
            android:id="@+id/checkin_w_content">
    </LinearLayout>
    <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:orientation="horizontal" 
            android:layout_alignParentRight="true">
        <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:orientation="horizontal" 
                android:id="@+id/checkin_w_menu">
        </LinearLayout>
        <Button 
            android:id="@+id/checkin_w_menu_toggle"
            android:background="@drawable/day_left"
            android:layout_width="30dip"
            android:layout_height="30dip" 
        />
    </LinearLayout>
  </RelativeLayout>
</FrameLayout>
